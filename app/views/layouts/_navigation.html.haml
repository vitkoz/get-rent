%nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
  = link_to 'Sidney P. Katz, PLLC', root_path, class: 'navbar-brand text-success'
  %button.navbar-toggler{"aria-controls" => "navbarCollapse", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarCollapse", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarCollapse.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item{ class: "#{'active' if current_page?(root_path)}" }
        = link_to 'Home', root_path, class: 'nav-link'

      %li.nav-item{ class: "#{'active' if current_page?(clients_path)}" }
        = link_to 'Clients', clients_path, class: 'nav-link'

      %li.nav-item{ class: "#{'active' if current_page?(properties_path)}" }
        = link_to 'Properties', properties_path, class: 'nav-link'

    %form.form-inline.mt-2.mt-md-0
      %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search", :type => "text"}/
      %button.btn.btn-outline-success.my-2.my-sm-0{:type => "submit"} Search
