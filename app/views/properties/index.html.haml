- content_for :page_icon do
  icon-Business-Mens

- content_for :page_title do
  Our
  %strong Properties

.row
  .bg-white.table-responsive.rounded.shadow-sm.pt-3.pb-3.mb-30
    .clearfix.b-b.mb-3.pb-2
      = link_to new_property_path, class:'btn btn-dark btn-icon float-right mr-3' do
        %i.fa.fa-plus
        New Property
      %h6.pl-3.pr-3.text-capitalize.font500.mb-20 Properties List

    %table#data-table.table.mb-0{:cellspacing => "0", :width => "100%"}
      %thead.dd-none
        %tr
          %th Tasks
          %th Property Name
          %th Client Name
          %th Total Cases
          %th Status
          %th Created

      %tbody
        - @properties.each do |property|
          %tr
            %td
              = link_to edit_property_path(property), class: 'd-inline-block ml-2 text-danger', title: 'Edit Info' do
                = fa_icon 'edit', style: 'font-size: 20px;'
              = link_to property, class: 'd-inline-block ml-2 text-success', title: 'Reports' do
                = fa_icon 'tasks', style: 'font-size: 20px;'
              = link_to property, class: 'd-inline-block ml-2 text-info', title: 'Cases' do
                = fa_icon 'line-chart', style: 'font-size: 20px;'
              = link_to property, class: 'd-inline-block ml-2 text-warning', title: 'Correspondense' do
                = fa_icon 'envelope', style: 'font-size: 20px;'
            %td
              = link_to property.name, property
              .fs12.text-muted
                #{addresses(property.addresses)}
                #{emails(property.emails)}
                #{phones(property.phones)}
                #{websites(property.websites)}
            %td
              = link_to property.client.name, property.client
            %td
              %span
                Cases
                %strong 3
              %br
              %span
                Pending
                %strong 23
              %br
            %td
              %span.badge.badge-text.badge-info
                = fa_icon 'circle', class: 'mr-2'
                Active
            %td
              = property.created_at.strftime('%m/%d/%Y %I:%M %P')
